<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ProfileScreenPrivate">

    <TextView
        android:id="@+id/HelloUser"
        android:layout_width="310dp"
        android:layout_height="92dp"
        android:layout_marginTop="4dp"
        android:lineSpacingExtra="14sp"
        android:text="Hello user"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#0E0E0E"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/Search"
        android:layout_width="98dp"
        android:layout_height="80dp"
        android:backgroundTint="#FFFFFF"
        android:scaleType="centerInside"
        android:scrollbarSize="24dp"
        android:text="Search"
        android:tint="#000C0C0C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listOfAppointments"
        app:layout_constraintVertical_bias="0.869"
        app:srcCompat="@drawable/_2_removebg_preview"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/editProfile"
        android:layout_width="169dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button"
        android:text="Edit profile"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/listOfAppointments"
        app:layout_constraintEnd_toStartOf="@+id/privateHistory"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HelloUser" />

    <ImageButton
        android:id="@+id/SettingButtonP"
        android:layout_width="50dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:tint="#0C0C0C"
        app:layout_constraintBottom_toTopOf="@+id/HelloBusinessUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_action_name"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/privatelogout"
        android:layout_width="59dp"
        android:layout_height="57dp"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="128dp"
        android:adjustViewBounds="false"
        android:background="#00090909"
        android:backgroundTint="#00FFFFFF"
        android:baselineAlignBottom="false"
        android:cropToPadding="false"
        android:foregroundTint="#07121111"
        android:tint="#040303"
        app:layout_constraintBottom_toTopOf="@+id/listOfAppointments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toEndOf="@+id/HelloUser"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <Button
        android:id="@+id/privateHistory"
        android:layout_width="169dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:shape="rectangle"
        android:text="Watch history"
        android:textColor="#FAF9F9"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/listOfAppointments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HelloUser" />

    <ListView
        android:id="@+id/listOfAppointments"
        android:layout_width="398dp"
        android:layout_height="330dp"
        android:layout_marginTop="144dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HelloUser" />


</androidx.constraintlayout.widget.ConstraintLayout>